{
	"name": "Lumin Framework",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu",
	"features": {
		"ghcr.io/ryanlua/features/rojo:0.2.0": {
			"version": "latest",
			"toolchainManager": "rokit"
		}
	},
    "customizations": {
        "vscode": {
            "extensions": [
                "JohnnyMorganz.luau-lsp"
            ]
        }
    },
	"forwardPorts": [
		34872
	],
	"portsAttributes": {
		"34872": {
			"label": "Rojo"
		}
	},
	"postCreateCommand": "rokit install --no-trust-check && wally install",
	"remoteUser": "root"
}